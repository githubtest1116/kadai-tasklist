<div class="row">
    <div class="col-xs-12  col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
        <h1>タスク編集ページ</h1>
    
        <%= render 'layouts/error_messages', message: @task %>
        
        <h3>id:<%= @task.id %></h3>
        <%= form_for(@task) do |f| %>
            <%= f.label :status, '状態' %>
            <%= f.select :status, ["未着手", "実施中", "完了"], class:"selectpicker" %>
            <%#= f.text_field :status %>
            <br>
            <%= f.label :content, 'タスク' %>
            <%= f.text_field :content, class:"form-control" %>
        
            <%= f.submit '保存する', class:"btn btn-default" %>
            <%= link_to '一覧に戻る', root_path, class:"btn btn-default" %>
            <%= link_to '詳細に戻る', task_path(@task), class:"btn btn-default" %>
        <% end %>
    </div>
</div>
