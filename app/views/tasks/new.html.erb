<div class="row">
    <div class="col-xs-12  col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
        <h1>新規タスク登録</h1>
        <%= render 'layouts/error_messages', message: @task %>
        
        <%= form_for(@task) do |f| %>
            <div class="form-group">
                <%= f.label :status, '状態' %>
                <%= f.select :status, [["未着手"], ["実施中"], ["完了"]]%>
            </div>
            <div class="form-group">
                <%= f.label :content, 'タスク' %>
                <%= f.text_field :content, class:"form-control col-size" %>
            </div>
        
            <%= f.submit '登録する', class:"btn btn-default" %>
            <%= link_to '一覧に戻る', root_path, class:"btn btn-default" %>
        <% end %>
    </div>
</div>





