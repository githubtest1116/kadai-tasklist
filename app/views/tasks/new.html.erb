    <%= f.label :status, '状態' %>
    <%#= f.select :status, [["未着手", "new"], ["実施中", "doing"], ["完了", "done"]]%>
    <%= f.select :status, [["未着手"], ["実施中"], ["完了"]]%>
    <%#= f.text_field :status %>

    <%= f.label :content, 'タスク' %>

    <%# text_areaの方がいいかもしれない　%>
