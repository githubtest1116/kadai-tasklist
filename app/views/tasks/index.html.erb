<h1>タスク一覧</h1>


<% if @tasks.any? %>
    <table class="table table-striped">
        <thead>
            <th>id</th>
            <th>状態</th>
            <th>内容</th>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= link_to task.id, task %></td>
                    <td><%= task.status %></td>
                    <td><%= task.content %></td>
                </tr>
            <% end %>                
        </tbody>
    </table>
    <%= paginate @tasks %>
<% end %>

</br>
<%= link_to '新規登録', new_task_path, class:"btn btn-primary" %>


<% if false %>
    <% @tasks.each do |task| %>
        <ul>
            <li>
                id:<%= link_to task.id, task %> 状態：<%= task.status %> ：内容:<%= task.content %>
            </li>
        </ul>
    <% end %>
<% end %>


